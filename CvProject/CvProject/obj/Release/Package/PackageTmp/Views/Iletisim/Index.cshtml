@using CvProject.Models.Entity
@model List<Tbliletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">İletişim Listesi</h3>
                        </div>
                        <div class="card-body">
                            <div class="wrapper">

                                @foreach (var x in Model)
                                {
                                    <section class="content">
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="card card-primary card-outline">
                                                        <div class="card-body p-0">
                                                            <div class="mailbox-read-message">
                                                                <h5>
                                                                    @x.Tarih - @x.Mail
                                                                </h5>
                                                                <p>
                                                                    @x.AdSoyad - @x.Konu
                                                                </p>
                                                                <hr szie="20"/>
                                                                <p>
                                                                    @x.Mesaj
                                                                </p>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer">
                                                            <a href="/Iletisim/IletisimSil/@x.ID" class="btn btn-danger">Sil</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
