@using CvProject.Models.Entity
@model List<TblSertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | User Profile</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Sertifika Listem</h3>
                        </div>

                        <div class="card-body">
                            <a href="/Sertifika/SertifikaEkle/" class="btn btn-info">Yeni Sertifika Ekle</a>
                            <br />
                            <br />
                            <div class="timeline timeline-header">
                                <!-- timeline time label -->
                                @foreach (var x in Model)
                                {

                                    <div class="time-label">
                                        <span class="bg-cyan">
                                            ID NO : @x.ID
                                        </span>
                                    </div>
                                    <div>
                                        <div class="timeline-item">
                                            <div class="timeline-body">
                                                @x.Aciklama
                                            </div>
                                            <div class="timeline-footer">
                                                <a href="/Sertifika/SertifikaDuzenle/@x.ID" class="btn btn-success btn-sm">Güncelle</a>
                                                <a href="/Sertifika/SertifikaSil/@x.ID" class="btn btn-danger btn-sm">Sil</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
